rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Assessment submissions - write only from authenticated functions
    match /assessments/{assessmentId} {
      allow read: if false; // Only accessible via Cloud Functions
      allow write: if false; // Only accessible via Cloud Functions
    }

    // Content configuration - read only
    match /content/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Rate limiting collection
    match /rateLimits/{ipHash} {
      allow read, write: if false; // Only accessible via Cloud Functions
    }
  }
}
